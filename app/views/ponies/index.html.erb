
<p id="notice"><%= flash[:notice] %></p>

<h1>Ponies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @ponies.present?%>
    <% @ponies.each do |pony| %>
      <tr>
        <td><%= pony.name %></td>
        <td><%= pony.profession %></td>
        <td><%= link_to 'Show', pony %></td>
        <td><%= link_to 'Edit', edit_pony_path(pony) %></td>
        <td><%= link_to 'Destroy', pony,method: :delete, data:{ confirm: 'Are you sure?'}, :remote => true, :class => 'delete' %></td>
      </tr>
    <% end %>
    <%else%>
    <td> 'No record found.'</td>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Pony', new_pony_path %>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
